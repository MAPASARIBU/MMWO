generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int          @id @default(autoincrement())
  username      String       @unique
  password_hash String
  name          String
  role          String
  mill_id       Int?
  is_active     Boolean      @default(true)
  created_at    DateTime     @default(now())
  mill          Mill?        @relation(fields: [mill_id], references: [id])
  planned_weeks WeeklyPlan[]
  audit_logs    AuditLog[]
  comments      Comment[]
  assigned_wos  WorkOrder[]  @relation("Assignee")
  reported_wos  WorkOrder[]  @relation("Reporter")

  @@map("users")
}

model Mill {
  id         Int         @id @default(autoincrement())
  name       String
  location   String?
  created_at DateTime    @default(now())
  stations   Station[]
  users      User[]
  wos        WorkOrder[]

  @@map("mills")
}

model Station {
  id          Int         @id @default(autoincrement())
  mill_id     Int
  name        String
  order_index Int         @default(0)
  created_at  DateTime    @default(now())
  equipment   Equipment[]
  mill        Mill        @relation(fields: [mill_id], references: [id])
  wos         WorkOrder[]

  @@map("stations")
}

model Equipment {
  id          Int         @id @default(autoincrement())
  station_id  Int
  code        String
  name        String
  criticality String
  is_active   Boolean     @default(true)
  created_at  DateTime    @default(now())
  station     Station     @relation(fields: [station_id], references: [id])
  wos         WorkOrder[]

  @@map("equipment")
}

model WorkOrder {
  id            Int          @id @default(autoincrement())
  wo_no         String       @unique
  mill_id       Int
  station_id    Int
  equipment_id  Int?
  category      String
  type          String
  priority      String
  description   String
  status        String
  reporter_id   Int
  assignee_id   Int?
  target_start  DateTime?
  target_finish DateTime?
  started_at    DateTime?
  completed_at  DateTime?
  verified_at   DateTime?
  closed_at     DateTime?
  created_at    DateTime     @default(now())
  updated_at    DateTime     @updatedAt
  weekly_plan   WeeklyPlan?
  attachments   Attachment[]
  audit_logs    AuditLog[]
  comments      Comment[]
  assignee      User?        @relation("Assignee", fields: [assignee_id], references: [id])
  equipment     Equipment?   @relation(fields: [equipment_id], references: [id])
  mill          Mill         @relation(fields: [mill_id], references: [id])
  reporter      User         @relation("Reporter", fields: [reporter_id], references: [id])
  station       Station      @relation(fields: [station_id], references: [id])

  @@map("work_orders")
}

model Attachment {
  id          Int       @id @default(autoincrement())
  wo_id       Int
  kind        String
  file_path   String
  file_name   String
  mime_type   String
  size        Int
  uploaded_by Int?
  uploaded_at DateTime  @default(now())
  wo          WorkOrder @relation(fields: [wo_id], references: [id])

  @@map("wo_attachments")
}

model Comment {
  id         Int       @id @default(autoincrement())
  wo_id      Int
  user_id    Int
  comment    String
  created_at DateTime  @default(now())
  user       User      @relation(fields: [user_id], references: [id])
  wo         WorkOrder @relation(fields: [wo_id], references: [id])

  @@map("wo_comments")
}

model AuditLog {
  id         Int       @id @default(autoincrement())
  wo_id      Int
  user_id    Int
  action     String
  field      String?
  old_value  String?
  new_value  String?
  created_at DateTime  @default(now())
  user       User      @relation(fields: [user_id], references: [id])
  wo         WorkOrder @relation(fields: [wo_id], references: [id])

  @@map("wo_audit_logs")
}

model WeeklyPlan {
  id           Int       @id @default(autoincrement())
  wo_id        Int       @unique
  planned_week String
  planned_day  String?
  planned_by   Int
  created_at   DateTime  @default(now())
  planner      User      @relation(fields: [planned_by], references: [id])
  wo           WorkOrder @relation(fields: [wo_id], references: [id])

  @@map("weekly_plan")
}
